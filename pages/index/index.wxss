.header {
  height: 80rpx;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: white;
  z-index: 100;
  border-bottom: 10rpx solid #f4f5f5;
}

.headerTab {
  color: dodgerblue;
}

.header .log {
  position: absolute;
}

.header .logoImg {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 20rpx;
  top: 10rpx;
}

.header .txt {
  position: absolute;
  left: 100rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  color: dodgerblue;
  font-weight: bold;
  font-style: normal;
}

.header .login {
  position: absolute;
  right: 40rpx;
  color: dodgerblue;
  font-style: normal;
  font-size: 50rpx;
  line-height: 80rpx;
}

.tabs {
  position: fixed;
  left: 0rpx;
  top: 85rpx;
  background-color: white;
  width: 100%;
  padding-left: 20rpx;
  z-index: 100;
  height: 80rpx;
  border-bottom: 2rpx solid #f4f5f5;
}

.tabs .tab {
  float: left;
  color: gray;
  font-size: 30rpx;
  line-height: 80rpx;
}

.tab.active {
  color: dodgerblue !important;
  font-weight: bold !important;
}

.tab.split {
  margin: 0 20rpx;
  font-size: 20rpx;
  line-height: 80rpx;
}

.itemList {
  width: 100%;
  padding-top: 170rpx;
  background-color: #f4f5f5;
  min-height: 100%;
}

.item {
  width: 100%;
  background-color: white;
  margin-bottom: 10rpx;
  padding-top: 20rpx;
}

.item image {
  border: 0;
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  left: 20rpx;
}

.item .author {
  color: gray;
  z-index: 10;
  width: 100%;
  position: relative;
  height: 60rpx;
}

.item .title {
  font-size: 35rpx;
  font-weight: bold;
  line-height: 30px;
  letter-spacing: 1px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
}

.item .name {
  position: absolute;
  left: 100rpx;
  top: 7.5rpx;
  font-size: 30rpx;
}

.item .pv {
  padding-bottom: 10px;
  margin-top: 10px;
  font-size: 15px;
  color: gray;
}

.item .title {
  padding-left: 20rpx;
}

.item .topicSummary {
  color: gray;
  padding: 20rpx 20rpx;
  font-size: 30rpx;
  letter-spacing: 1rpx;
  width: 710rpx;
  overflow-x: hidden;
  word-wrap: break-word;
}

.item .pv {
  width: 100%;
  position: relative;
  height: 20px;
}

.item .read {
  font-size: 30rpx;
  left: 20rpx;
  position: absolute;
}

.item .comment {
  font-size: 30rpx;
  left: 220rpx;
  position: absolute;
}

.item .publishtime {
  font-size: 30rpx;
  left: 400rpx;
  position: absolute;
}

.loading {
  width: 100%;
  text-align: center;
  background-color: white;
}

.loading image {
  height: 100rpx;
  width: 200rpx;
}

.avatar {
  position: absolute;
  right: 30rpx;
  top: 10rpx;
}

.avatar image {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}

.pulldowntabs {
  position: fixed;
  right: 20rpx;
  padding: 20rpx;
  top: 100rpx;
  z-index: 101;
  background-color: white;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.4);
}

.pulldowntabs view {
  padding: 10rpx;
  border-bottom: 1px solid whitesmoke;
  color: gray;
  font-size: 30rpx;
  line-height: 50rpx;
  text-align: center;
}

.line1 {
  height: 5rpx;
  background-color: #f4f5f5;
  color: gray;
  width: 710rpx;
  margin-left: 20rpx;
}

.msg {
  position: absolute;
  right: 120rpx;
  color: gray;
  line-height: 80rpx;
  font-size: 30rpx;
}

.msg.active {
  color: red;
}

.end {
  text-align: center;
  font-size: 25rpx;
  line-height: 60rpx;
  color: gray;
  height: 80rpx;
}
